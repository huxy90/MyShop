<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/shape_search_bg"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_search"
                android:gravity="center"
                android:padding="6dp"
                android:text="商品搜索，共239款好物" />
        </LinearLayout>
        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"/>
        <com.jiyun.myshop.utils.MaxRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_channel" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:background="@color/bg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品牌商直供"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:layout_margin="@dimen/dp_15"
            android:layout_gravity="center"/>
        <com.jiyun.myshop.utils.MaxRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_brand" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周一周四▪新品首发"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:layout_margin="@dimen/dp_15"
            android:layout_gravity="center"/>
        <com.jiyun.myshop.utils.MaxRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_newGooods" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:background="@color/bg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人气推荐"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:layout_margin="@dimen/dp_15"
            android:layout_gravity="center"/>
        <com.jiyun.myshop.utils.MaxRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_hotGooods" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:background="@color/bg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专题精选"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:layout_margin="@dimen/dp_15"
            android:layout_gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.jiyun.myshop.utils.MaxRecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rl_topic" />
        </RelativeLayout>
        <com.jiyun.myshop.utils.MaxRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_category" />
    </LinearLayout>
</ScrollView>

